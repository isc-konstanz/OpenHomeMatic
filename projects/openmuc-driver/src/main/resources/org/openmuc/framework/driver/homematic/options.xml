    <deviceScanSettings>
      <option id="ignoreExisting">
        <name>Ignore Existing</name>
        <description><![CDATA[
            Ignore already configured HomeMatic devices when scanning.<br>
            If disabled, all already paired and registered devices will be returned as well.
          ]]>
        </description>
        <type>BOOLEAN</type>
        <default>true</default>
      </option>
    </deviceScanSettings>
    
    <channelAddress>
      <syntax>
        <keyValue>false</keyValue>
      </syntax>
      <option id="address">
        <name>Identifier</name>
        <description>The unique identifier of the data channel</description>
        <mandatory>true</mandatory>
        <type>STRING</type>
      </option>
    </channelAddress>
    
    <channelSettings>
      <option id="type">
        <name>Type</name>
        <description><![CDATA[
            The type of the data channel:<br>
            <ol>
              <li>Attribute channels from which can be read.</li>
              <li>Command channels which can be set</li>
            </ol>
          ]]>
        </description>
        <mandatory>true</mandatory>
        <type>STRING</type>
        <selection>
          <item value="ATTRIBUTE">Attribute</item>
          <item value="COMMAND">Command</item>
        </selection>
        <default>ATTRIBUTE</default>
      </option>
    </channelSettings>
